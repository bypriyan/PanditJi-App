<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bell"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/app_ed_outline_color"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
            android:background="@drawable/circle_background" />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Anonymous"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Amazing astrologer mostly all doubts are clear."
                android:textColor="@color/greay"
                android:textSize="13sp" />
        </LinearLayout>

     <ImageView
         android:layout_width="18dp"
         android:layout_height="18dp"
         android:layout_marginStart="8dp"
         android:src="@drawable/time"
         android:layout_marginTop="1dp"
         app:tint="@color/greay" />
        <TextView
            android:id="@+id/tvRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hrs ago"
            android:layout_marginStart="4dp"
            android:textColor="@color/greay"
            android:textSize="14sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
